<div class='container'>
  <% flash.each do |key, value| %>
    <% unless value.blank? || value.length < 2 %>
      <div class='alert alert-<%= key %> alert-dismissible' role='alert'>
        <button type='button' class='close' data-dismiss='alert'><span aria-hidden='ture'><i class='fa fa-close'></i></button>
        <%= value %>
      </div>
    <% end %>
  <% end %>
</div>
